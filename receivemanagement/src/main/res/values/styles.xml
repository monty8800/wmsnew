<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolBarTitleTextStyle" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textSize">@dimen/dimens_20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ToolBarSubTitleTextStyle" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textSize">@dimen/dimens_16sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>